lib gomp : : <name>gomp ;
lib cuda : : <name>cudart ;


project 
    : requirements
      <include>$(THRUST_ROOT)
      <include>$(CUDA_ROOT)
      <include>$(ODEINT_NEW_ROOT)
      <include>../../
      <define>BOOST_ALL_NO_LIB=1
      <library>gomp
      <library>cuda
      <cxxflags>-fopenmp
    : build-dir .
    ;
    
make poiseuille_cu : poiseuille.cu : @nvcc ;


actions nvcc
{
    /usr/local/cuda/bin/nvcc -I../../../ -I$(BOOST_ROOT) -I$(CUDA_ROOT) -I$(THRUST_ROOT) -I$(ODEINT_NEW_ROOT) -I$(THRUST_EXT_ROOT) -Xcompiler -fopenmp -DTHRUST_DEVICE_BACKEND=THRUST_DEVICE_BACKEND_OMP -arch sm_13 -g -lgomp -lcudart $(>) -o $(<) 
}

